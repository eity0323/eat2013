<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 	<item android:state_pressed="true" android:drawable="@drawable/droplist_down" /> -->
<!-- 	<item android:state_focused="true" android:drawable="@drawable/droplist_focus" /> -->
<!-- 	<item android:drawable="@drawable/droplist" /> -->
<item android:state_pressed="true"> 
        <shape> 
            <gradient android:angle="270" android:startColor="#543103" android:endColor="#543103"/> 
<!--             <stroke android:width="1dip" android:color="#cccccc" />  -->
            <corners android:radius="5dp" /> 
            <padding android:left="5dp" android:top="5dp" 
                android:right="5dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
  
    <item android:state_focused="true"> 
        <shape> 
            <gradient android:startColor="#543103" android:endColor="#543103" 
                android:angle="270" /> 
<!--             <stroke android:width="1dip" android:color="#cccccc" />  -->
            <corners android:radius="5dp" /> 
            <padding android:left="3dp" android:top="3dp" 
                android:right="3dp" android:bottom="3dp" /> 
        </shape> 
    </item> 
  <item android:state_selected="true"> 
        <shape> 
            <gradient android:startColor="#543103" android:endColor="#543103" 
                android:angle="270" /> 
<!--             <stroke android:width="1dip" android:color="#cccccc" />  -->
            <corners android:radius="5dp" /> 
            <padding android:left="3dp" android:top="3dp" 
                android:right="3dp" android:bottom="3dp" /> 
        </shape> 
    </item> 
    <item> 
        <shape> 
            <gradient android:startColor="#CFCFCF" android:endColor="#CFCFCF" 
                android:angle="90" /> 
<!--             <stroke android:width="1dip" android:color="#cccccc" />  -->
            <corners android:radius="5dip" /> 
            <padding android:left="3dp" android:top="3dp" 
                android:right="3dp" android:bottom="3dp" /> 
        </shape> 
    </item> 
</selector>