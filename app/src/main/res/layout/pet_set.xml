<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:orientation="vertical" >
    
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:paddingTop="5dip"
	    android:paddingBottom="5dip"
	    android:background="@drawable/top_bg_line" >
	
        <Button 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/petback"
	    	android:layout_alignParentLeft="true"
	    	android:background="@drawable/back01"/>
    	<TextView 
    		android:id="@+id/centertext"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerInParent="true"
    		android:textColor="@color/white"
    		android:text="餐宠设置"
    		android:textSize="20sp"/>
    </RelativeLayout>
    
 	<LinearLayout 
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:background="@drawable/list_corner"
 	    android:paddingTop="5dp"
 	    android:paddingBottom="4dp"
 	    android:layout_margin="2dp"
 	    android:orientation="horizontal">
 	    <TextView 
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:layout_gravity="center"
 	        android:layout_marginLeft="5dp"
 	        android:textColor="@color/gray"
 	        android:layout_weight="1"
 	        android:text="启用宠物"/>
 	    <com.gae.view.SlipButton
 	        android:id="@+id/pet_usable" 
	   	    android:layout_width="110dp"
	   	    android:layout_height="30dp"/>
 	</LinearLayout>
 	
 	<LinearLayout 
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:background="@drawable/list_corner"
 	    android:paddingTop="3dp"
 	    android:paddingBottom="4dp"
 	    android:layout_margin="2dp"
 	    android:layout_marginTop="8dp"
 	    android:orientation="vertical">
 	    <LinearLayout 
 	        android:layout_width="fill_parent"
 	        android:layout_height="wrap_content"
 	        android:paddingTop="8dp"
 	    	android:paddingBottom="8dp"
 	        android:orientation="horizontal">
 	         <TextView 
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:layout_weight="1"
	 	        android:layout_marginLeft="5dp"
	 	        android:layout_gravity="center"
	 	        android:textColor="@color/gray"
	 	        android:text="天气预报"/>
	 	    <com.gae.view.SlipButton
	 	        android:id="@+id/pet_weather" 
		   	    android:layout_width="110dp"
		   	    android:layout_height="30dp"/>
 	    </LinearLayout>
 	    
 	    <com.gae.view.DashedLine
 	        android:layout_width="fill_parent"
 	        android:layout_height="2dp"/>
 	    
 	    <LinearLayout 
 	        android:layout_width="fill_parent"
 	        android:layout_height="wrap_content"
 	        android:paddingTop="10dp"
 	    	android:paddingBottom="10dp"
 	    	android:id="@+id/pet_city_layout"
 	        android:orientation="horizontal">
 	         <TextView 
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:layout_weight="1"
	 	        android:layout_marginLeft="5dp"
	 	        android:layout_gravity="center"
	 	        android:textColor="@color/gray"
	 	        android:text="城市"/>
	 	    <Button
	 	        android:id="@+id/pet_city"
	 	        android:layout_width="7dp"
	 	        android:layout_height="13dp"
	 	        android:layout_marginRight="50dp"
	 	        android:layout_gravity="center"
	 	        android:background="@drawable/arraw"/>
 	    </LinearLayout>
 	</LinearLayout>
</LinearLayout>