<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#e3e3e3"
    tools:context=".PetActivity" >

	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:paddingTop="5dip"
	    android:paddingBottom="5dip"
	    android:background="@drawable/top_bg_line" >
	
        <Button 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/petback"
	    	android:layout_alignParentLeft="true"
	    	android:background="@drawable/back01"/>
    	<TextView 
    		android:id="@+id/centertext"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerInParent="true"
    		android:textColor="@color/white"
    		android:text="餐桌宠物"
    		android:textSize="20sp"/>
    </RelativeLayout>
    
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_vertical"
       android:paddingLeft="5pt"
       android:paddingRight="5pt"
       android:background="@drawable/ad_back"
       android:orientation="horizontal">	    
       <ImageView
			android:id="@+id/petIcon"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:background="@drawable/headicoback"		
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
       <LinearLayout  
		   android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="vertical">
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="昵称："/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/p_nickname"/>
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="性别："/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/p_gender"/>
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="生日："/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/p_birth"/>
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="心情："/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/p_mood"/>
		    </LinearLayout>
		</LinearLayout>
	</LinearLayout>   
	
	<RelativeLayout  
	   android:layout_width="280dp"
       android:layout_height="240dp"
       android:layout_marginTop="50dp"
       android:layout_gravity="center"
       android:background="@drawable/pet_cen_bg">	 
       <Button 
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/pet_set_btn"
           android:layout_marginTop="70dp"
           android:layout_marginLeft="15dp"
           android:background="@drawable/pet_set"/>
       <Button 
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="70dp"
           android:id="@+id/pet_info_btn"
           android:background="@drawable/pet_info"/>
       <Button 
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="145dp"
           android:id="@+id/pet_share_btn"
           android:background="@drawable/pet_share"/>
       <Button 
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_marginTop="70dp"
           android:layout_marginLeft="205dp"
           android:id="@+id/pet_help_btn"
           android:background="@drawable/pet_help"/>
	    <Button 
	        android:layout_width="140dp"
	        android:layout_height="80dp"
	        android:layout_marginTop="135dp"
	        android:layout_centerHorizontal="true"
	        android:id="@+id/start_btn"
	        android:background="@drawable/pet_start"/>
	</RelativeLayout>    
</LinearLayout>