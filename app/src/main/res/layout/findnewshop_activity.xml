<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#e3e3e3"
	android:layout_gravity="center"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical" >

	<RelativeLayout
		android:background="@drawable/top_bg_line"
		android:id="@+id/top"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:paddingBottom="5dip"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="5dip" >

		<Button
			android:background="@drawable/back01"
			android:id="@+id/recommedback"
			android:layout_alignParentLeft="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />

		<TextView
			android:id="@+id/centertext"
			android:layout_centerInParent="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="发现新餐馆"			
			android:textColor="@color/white"
			android:textSize="20dp" />

	</RelativeLayout>

	<Button
		android:gravity="center"
		android:id="@+id/remmfood"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_width="wrap_content"
		android:background="@drawable/basic_btn"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:textColor="#ffffff"
		android:textSize="18sp"
		android:text="发现餐馆" />

	<LinearLayout
		android:id="@+id/camm"
		android:layout_above="@id/remmfood"
		android:layout_below="@id/top"
		android:layout_height="fill_parent"
		android:layout_margin="10dp"
		android:layout_width="fill_parent"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="拍   照"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<ImageView
				android:id="@+id/img"
				android:layout_gravity="center"
				android:layout_height="60dp"
				android:layout_marginLeft="10dp"
				android:layout_width="60dp"
				android:src="@drawable/xiaohei" />

			<Button
				android:id="@+id/camerbtn"
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_width="wrap_content"
				android:text="拍   照"
				android:textColor="#ffffff"
				android:background="@drawable/basic_btn"
				android:textSize="16sp" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="名   称"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<EditText
				android:id="@+id/shopname"
				android:layout_gravity="center"
				android:layout_height="40dp"
				android:hint="这个餐馆叫什么"
				android:textSize="14sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_width="fill_parent" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="分   类"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<EditText
				android:id="@+id/shopstyp"
				android:layout_gravity="center"
				android:layout_height="40dp"
				android:hint="它是什么菜系的餐馆"
				android:textSize="14sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_width="fill_parent" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="电   话"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<EditText
				android:id="@+id/shopmb"
				android:layout_gravity="center"
				android:layout_height="40dp"
				android:hint="餐馆的电话是多少"
				android:textSize="14sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_width="fill_parent" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="地   址"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<EditText
				android:id="@+id/shopaddr"
				android:layout_gravity="center"
				android:layout_height="40dp"
				android:hint="这个餐馆在哪"
				android:textSize="14sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_width="fill_parent" />
		</LinearLayout>


	</LinearLayout>

</RelativeLayout>