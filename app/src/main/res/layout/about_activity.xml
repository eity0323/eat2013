<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fullbg"
    android:orientation="vertical"
    android:paddingBottom="70dip" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topback" >

        <TextView
            android:id="@+id/centertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于我们"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/foodback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/centertext"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back01" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/centercontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginTop="140dip" >

        <TextView
            android:id="@+id/otherAboutCompany"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="智      点"
            android:textColor="@color/gray"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/otherAboutWeb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/otherAboutCompany"
            android:gravity="center"
            android:text="智能点餐，就选智点"
            android:textColor="@color/gray"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomcontent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/version"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:text="v3.16.0425"
            android:textColor="@color/gbco"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/version"
            android:gravity="center"
            android:text="普兰软件，版权所有"
            android:textColor="@color/gbco"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/corporation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/copyright"
            android:gravity="center"
            android:text="纪元控股     融资云JKW"
            android:textColor="@color/gbco"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/centertelephone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/centercontent"
        android:layout_marginTop="30dip" >

        <TextView
            android:id="@+id/servicetel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="60dip"
            android:text="客服电话：400-003-1368"
            android:textColor="@color/gbco"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hottel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/servicetel"
            android:gravity="left"
            android:paddingLeft="60dip"
            android:text="加盟热线：0755-25329450"
            android:textColor="@color/gbco"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>