<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topback" >

        <TextView
            android:id="@+id/centertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pinfoback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/centertext"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back01" />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/list_corner"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:padding="5dp"
			android:layout_marginTop="10dp"
        	android:orientation="horizontal">
            <TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="称呼："/>
            <EditText 
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/pinfo_name"
                android:hint="请输入您的称呼"
                android:background="#00000000"/>
        </LinearLayout>      
        
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:padding="5dp"
			android:layout_marginTop="10dp"
        	android:orientation="horizontal">
            <TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="邮箱："/>
            <EditText 
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/pinfo_email"
                android:hint="请输入您的邮箱地址"
                android:background="#00000000"/>
        </LinearLayout>  
        
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:padding="5dp"
			android:layout_marginTop="10dp"
        	android:orientation="horizontal">
            <TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="生日："/>
            <EditText 
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/pinfo_time"
                android:hint="请选择您的出生日期"
                android:background="#00000000"/>
        </LinearLayout>  
        
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:padding="5dp"
			android:layout_marginTop="10dp"
        	android:orientation="horizontal">
            <TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="性别："/>
            <com.gae.view.SlipButtonSex
				android:gravity="center"
				android:id="@+id/slipbtnsex"
				android:layout_height="30dp"
				android:layout_width="wrap_content" />
        </LinearLayout>  
    </LinearLayout>

</LinearLayout>