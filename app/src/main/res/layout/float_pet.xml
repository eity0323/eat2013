<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gif="http://schemas.android.com/apk/res/com.example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/float_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dog_normal" />

    <LinearLayout
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_f_food"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#ff00ff00"
            android:text="feed" />

        <Button
            android:id="@+id/btn_f_move"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#ff0000ff"
            android:text="bath" />

        <Button
            android:id="@+id/btn_f_shop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#ffff0000"
            android:text="hungry" />

        <Button
            android:id="@+id/btn_f_near"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#fff00f00"
            android:text="lonely" />
    </LinearLayout>

</LinearLayout>