<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#e3e3e3"
	android:layout_gravity="center"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical" >

	<RelativeLayout
		android:background="@drawable/top_bg_line"
		android:id="@+id/top"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:paddingBottom="5dip"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="5dip" >

		<Button
			android:background="@drawable/back01"
			android:id="@+id/recommedback"
			android:layout_alignParentLeft="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />

		<TextView
			android:id="@+id/centertext"
			android:layout_centerInParent="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="推荐美食"
			android:textColor="@color/white"
			android:textSize="20dp" />

		<Button
			android:text="发现新餐馆"
			android:id="@+id/findshop"
			android:textColor="#ffffff"
			android:layout_alignParentRight="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:background="@drawable/basic_btn"/>
	</RelativeLayout>

	<Button
		android:gravity="center"
		android:id="@+id/remmfood"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_width="wrap_content"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:textSize="18sp"
		android:textColor="#ffffff"
		android:background="@drawable/basic_btn"
		android:text="推荐美食" />

	<LinearLayout
		android:id="@+id/camm"
		android:layout_above="@id/remmfood"
		android:layout_below="@id/top"
		android:layout_height="fill_parent"
		android:layout_margin="10dp"
		android:layout_width="fill_parent"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="拍   照"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<ImageView
				android:id="@+id/img"
				android:layout_gravity="center"
				android:layout_height="60dp"
				android:layout_marginLeft="10dp"
				android:layout_width="60dp"
				android:src="@drawable/xiaohei" />

			<Button
				android:id="@+id/camerbtn"
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_width="wrap_content"
				android:text="拍   照"
				android:textColor="#ffffff"
				android:background="@drawable/basic_btn"
				android:textSize="16sp" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="菜   名"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<EditText
				android:id="@+id/foodname"
				android:layout_gravity="center"
				android:layout_height="40dp"
				android:hint="这是什么菜"
				android:textSize="14sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_width="fill_parent" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="分   类"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<EditText
				android:id="@+id/foodstyp"
				android:layout_gravity="center"
				android:layout_height="40dp"
				android:hint="它属于什么菜系"
				android:textSize="14sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_width="fill_parent" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="出   品"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<EditText
				android:id="@+id/foodfrom"
				android:layout_gravity="center"
				android:layout_height="40dp"
				android:hint="它是哪个餐馆做的"
				android:textSize="14sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_width="fill_parent" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="价   格"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<EditText
				android:id="@+id/foodprice"
				android:layout_gravity="center"
				android:layout_height="40dp"
				android:hint="这个菜多少钱"
				android:textSize="14sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_width="fill_parent" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="理   由"
				android:textColor="@color/gray"
				android:textSize="20dp" />

			<EditText
				android:id="@+id/reason"
				android:layout_gravity="center"
				android:layout_height="100dp"
				android:hint="您还可以写下推荐理由哦！"
				android:textSize="14sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_width="fill_parent" />
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>